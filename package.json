{
  "name": "compare-repos",
  "version": "1.0.0",
  "description": "A command-line tool to compare two code repositories and analyze their similarities and differences.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skhetcho/compare-repos.git"
  },
  "bin": {
    "compare-repos": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "repository",
    "comparison",
    "cli",
    "diff"
  ],
  "author": "Souren Khetcho",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
